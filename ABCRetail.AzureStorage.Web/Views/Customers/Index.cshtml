@model IEnumerable<Azure.Data.Tables.TableEntity>

<h2 class="text-center mb-4">💖 Our Lovely Customers 💖</h2>

<div class="text-center mb-3">
    <a href="/Customers/Create" class="btn btn-primary">Add New Customer 🌸</a>
</div>

<table class="table table-hover text-center">
    <thead class="table-light">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.GetString("FirstName")</td>
                <td>@c.GetString("LastName")</td>
                <td>@c.GetString("Email")</td>
                <td>
                    <a href="/Customers/Delete/@c.RowKey" class="btn btn-danger btn-sm">Delete ❌</a>
                </td>
            </tr>
        }
    </tbody>
</table>

