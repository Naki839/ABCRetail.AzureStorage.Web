<!DOCTYPE html>
<html lang="en">
<head>

    <style>
    body {
        font-family: 'Comfortaa', cursive;
        background-color: #FFF0F5; /* soft pink background */
        color: #333;
    }

    h2 {
        color: #FF69B4; /* hot pink headers */
        text-align: center;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #FFB6C1;
        border-color: #FFB6C1;
        color: #fff;
    }

    .btn-primary:hover {
        background-color: #FF69B4;
        border-color: #FF69B4;
    }

    .btn-success {
        background-color: #90EE90; /* soft green */
        border-color: #90EE90;
        color: #fff;
    }

    .btn-success:hover {
        background-color: #32CD32; /* lime green */
        border-color: #32CD32;
    }

    .table {
        background-color: #fff0f5;
        border-radius: 10px;
        box-shadow: 0px 4px 6px rgba(0,0,0,0.1);
    }

    input, textarea {
        border-radius: 10px;
        border: 1px solid #FFB6C1;
        padding: 8px;
    }

    label {
        font-weight: bold;
        color: #FF69B4;
    }

    a {
        text-decoration: none;
    }

    img {
        border-radius: 10px;
    }
</style>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABCRetail.AzureStorage.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ABCRetail.AzureStorage.Web.styles.css" asp-append-version="true" />
</head>
<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@400;700&display=swap" rel="stylesheet">

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABCRetail.AzureStorage.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ABCRetail.AzureStorage.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
